<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    tools:context=".Activities.InfoActivity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="Candidate Info"
                    android:textColor="@color/primary"
                    android:textSize="21dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/infoTextView"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:visibility="gone" />





            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/C_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_black_close"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="6dp"
                        android:text="Available"
                        android:textColor="@color/primary"
                        android:textSize="20dp"
                        android:textStyle="bold" />



                    <TextView
                        android:id="@+id/C_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_black_close"
                        android:paddingLeft="6dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="29yrs"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/C_image"
                            android:layout_margin="7dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/profile"
                            app:civ_border_color="@color/primary"
                            app:civ_border_width="2dp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/C_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Elmasha Omondi"
                                android:textColor="@color/black"
                                android:textSize="19dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_location"
                                    android:text="Location"
                                    android:textColor="@color/grey"
                                    android:textSize="15dp" />



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=": "
                                    android:textColor="@color/grey"
                                    android:textSize="17dp" />


                                <TextView
                                    android:id="@+id/C_county"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"
                                    android:textSize="16dp" />


                                <TextView
                                    android:id="@+id/C_ward"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"
                                    android:textSize="16dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:drawableRight="@drawable/ic_home"
                                    android:drawableTint="@color/black"
                                    android:text="Residence "
                                    android:textSize="15dp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="5dp"
                                    android:text=": "
                                    android:textSize="18dp" />


                                <TextView
                                    android:id="@+id/C_residence"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginStart="8dp"
                                    android:text=""
                                    android:textSize="18dp" />

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_money"
                                    android:drawableTint="@color/black"
                                    android:text="Salary"
                                    android:textColor="@color/grey"
                                    android:textSize="15dp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=": "
                                    android:textColor="@color/black"
                                    android:textSize="17dp" />


                                <TextView
                                    android:id="@+id/C_salary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5000"
                                    android:textColor="@color/black"
                                    android:textSize="17dp"
                                    android:textStyle="bold"/>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="4dp">



                        <TextView
                            android:id="@+id/C_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:text="072324546"
                            android:textColor="@color/grey"
                            android:textSize="18dp"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/C_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawableLeft="@drawable/ic_id"
                            android:drawableTint="@color/black"
                            android:text=" 34453534"
                            android:textColor="@color/grey"
                            android:textSize="18dp"
                            android:visibility="gone" />


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">


                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/C_Call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/black"
                        app:fab_icon="@drawable/ic_phone"
                        app:fab_size="mini" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Call Agent/Bureau"
                        android:textColor="@color/main"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/BureauNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Bureau name: "
                            android:textColor="@color/grey"
                            android:textSize="16dp"
                            />

                        <TextView
                            android:id="@+id/BureauName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="@color/main"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <com.getbase.floatingactionbutton.FloatingActionButton
                        android:id="@+id/C_sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/black"
                        app:fab_icon="@drawable/ic_sms"
                        app:fab_size="mini" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sms"
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/black"
                    android:padding="6dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:text="Steps :"
                        android:layout_margin="5dp"
                        android:textColor="@color/primary"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1. Call the agent/bureau to discuss the candidate and interview him/her directly"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="@color/lightGrey"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="2. Once agreed click on 'confirm deal'. Otherwise if not agreed, click on 'Change preference'."
                        android:layout_marginStart="15dp"
                        android:textColor="@color/lightGrey"
                        android:textSize="14dp"
                        android:layout_marginBottom="6dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="NB: Clicking on 'Confirm' is what will remove your choice from the list of available candidates, so that other people do not select him/her."
                        android:layout_marginStart="15dp"
                        android:textColor="@color/lightGrey"
                        android:layout_marginBottom="6dp"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Your payment shall remain valid for 3 days."
                        android:layout_marginStart="15dp"
                        android:textColor="@color/lightGrey"
                        android:textSize="14dp"
                        android:layout_height="wrap_content"/>






                </LinearLayout>

            </androidx.core.widget.NestedScrollView>






        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




    <LinearLayout
        android:id="@+id/Deal_layout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/confirm_deal"
                android:layout_width="200dp"
                android:text="Confirm deal"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:background="@color/primary"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel_deal"
                android:layout_width="200dp"
                android:text="CHANGE PREFERENCE"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@color/lightGrey"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"/>

        </LinearLayout>





    </LinearLayout>


</RelativeLayout>