<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/LogOut"
                    android:layout_width="wrap_content"
                    android:text="LogOut  "
                    android:textSize="17dp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_margin="8dp"
                    android:drawableRight="@drawable/ic_logout"
                    android:textColor="@color/ColorRed"
                    android:layout_gravity="end"
                    android:drawableTint="@color/ColorRed"
                    android:layout_height="wrap_content"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/E_Profileimage"
                    android:src="@drawable/profile"
                    android:layout_gravity="center"
                    android:layout_width="70dp"
                    android:layout_margin="8dp"
                    android:layout_height="70dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/E_name"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Elmasha Omondi Oduor"
                        android:textSize="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/E_email"
                        android:textColor="@color/white"
                        android:text="elmasha@gmail.com"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/E_id"
                        android:textColor="@color/white"
                        android:text=" 3444565"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/E_county"
                        android:textColor="@color/white"
                        android:text=""
                        android:layout_marginBottom="10dp"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                </LinearLayout>








            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/edit_Tf_profile"
                    android:layout_width="wrap_content"
                    app:fab_size="mini"
                    android:layout_gravity="center_horizontal"
                    app:fab_colorNormal="@color/primary"
                    app:fab_colorPressed="@color/white"
                    app:fab_icon="@drawable/ic_edit_60"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Edit Profile"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/EditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/closeEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:drawableLeft="@drawable/ic_close_30"
                        android:drawableTint="@color/ColorRed"
                        android:layout_margin="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >




                        <EditText
                            android:id="@+id/edit_Tf_name"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textColorHint="@color/grey"
                            android:drawableRight="@drawable/ic_person"
                            android:drawableTint="@color/primary"
                            android:text="Elmasha Omon"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            />




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >





                        <EditText
                            android:id="@+id/edit_Tf_email"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:drawableRight="@drawable/ic_mail"
                            android:drawableTint="@color/primary"
                            android:text=" elmashavitran@gmail.com"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey"
                            android:textSize="17dp" />




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >




                        <EditText
                            android:id="@+id/edit_Tf_phone"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:text="3444565"
                            android:layout_gravity="end"
                            android:drawableRight="@drawable/ic_phone_24"
                            android:drawableTint="@color/primary"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey"
                            android:textSize="18dp" />







                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >



                        <EditText
                            android:id="@+id/edit_Tf_location"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text=" Nairobi"
                            android:drawableRight="@drawable/ic_location"
                            android:drawableTint="@color/primary"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey"
                            android:textSize="17dp" />





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        >



                        <EditText
                            android:id="@+id/edit_Tf_street"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text=" Nairobi"
                            android:drawableRight="@drawable/ic_location"
                            android:drawableTint="@color/primary"
                            android:textColor="@color/white"
                            android:textColorHint="@color/grey"
                            android:textSize="17dp" />





                    </LinearLayout>


                    <Button
                        android:id="@+id/edit_Tf_saveChanges"
                        android:layout_width="200dp"
                        android:text="Save changes"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:textSize="18dp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_round_gradient"
                        android:layout_height="wrap_content"/>








                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_black"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/E_candidates"
                    android:textColor="@color/main"
                    android:text="Selected candidates."
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_candidates"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</RelativeLayout>