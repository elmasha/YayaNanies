<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/LogOut"
                android:layout_width="wrap_content"
                android:text="LogOut  "
                android:textSize="17dp"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:drawableRight="@drawable/ic_logout"
                android:textColor="@color/ColorRed"
                android:layout_gravity="end"
                android:drawableTint="@color/ColorRed"
                android:layout_height="wrap_content"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/E_Profileimage"
                android:src="@drawable/profile"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_margin="8dp"
                android:layout_height="100dp"/>


            <TextView
                android:id="@+id/E_name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:text="Elmasha Omondi Oduor"
                android:textSize="16dp"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/E_email"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/E_id"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:text=" 3444565"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bg_black"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/E_candidates"
                    android:textColor="@color/main"
                    android:layout_gravity="center_horizontal"
                    android:text="Selected candidates."
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_candidates"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</RelativeLayout>