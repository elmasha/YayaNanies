<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:background="@drawable/bg_blue_close"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/row_age"
                        android:layout_width="wrap_content"
                        android:text="23"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>





                </LinearLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/row_image"
                    android:layout_width="80dp"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_person_24"
                    android:layout_height="80dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/row_name"
                        android:layout_width="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginStart="5dp"
                        android:text="Elmasha Omondi"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>






                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Salary: "
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"/>


                        <TextView
                            android:id="@+id/row_salary"
                            android:layout_width="wrap_content"
                            android:text="7000"
                            android:textSize="16dp"
                            android:textColor="@color/main"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/row_county"
                            android:textAlignment="center"
                            android:text="Nairobi"
                            android:drawableLeft="@drawable/ic_location"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/row_ward"
                            android:text="kabiria"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/row_mobile"
                        android:layout_width="wrap_content"
                        android:text="073828829"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:background="@color/primary"
                        android:padding="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/row_meet"
                            android:layout_width="wrap_content"
                            android:text=" Schedule meeting"
                            android:textStyle="bold"
                            android:paddingRight="10dp"
                            android:drawableLeft="@drawable/ic_access_time"
                            android:drawableTint="@color/black"
                            android:textColor="@color/black"
                            android:layout_alignParentBottom="true"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>






                </LinearLayout>



            </LinearLayout>









        </LinearLayout>



</androidx.cardview.widget.CardView>